{
    "manifest_version": 2,

    "name": "Generator Test",
    "description": "This is a simple test of the basic extension generator script and templates.",
    "version": "0.0.1",

    "content_scripts": [
        {
            "matches": [
                "https://*.ap-southeast-2.aws.found.io:9243/app/security/rules/id/*"
            ],
            "run_at": "document_end",
            "js": ["content.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "activeTab",
        "tabs"
    ],

    "browser_action": {
        "default_title": "Construct lists of rules for ERT.",
        "default_icon": "images/eg.png",
        "default_popup": "popup.html"
    }
}
